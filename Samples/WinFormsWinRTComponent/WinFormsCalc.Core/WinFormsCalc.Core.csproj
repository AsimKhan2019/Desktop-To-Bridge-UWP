<Project Sdk="Microsoft.NET.Sdk.WindowsDesktop">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>netcoreapp3.1</TargetFramework>
    <UseWindowsForms>true</UseWindowsForms>
    <Platforms>x64</Platforms>
    <ApplicationManifest>WinFormsCalc.Core.exe.manifest</ApplicationManifest>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="WinFormsCalc.Core.exe.manifest" />
  </ItemGroup>

  <ItemGroup>
    <Content Include="WinFormsCalc.Core.exe.manifest">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.VCRTForwarders.140" Version="1.0.6" />
    <PackageReference Include="Microsoft.Windows.UndockedRegFreeWinrt" Version="1.0.200616.3" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\SimpleMathCppWinRT\SimpleMathCppWinRT.vcxproj" />
  </ItemGroup>

</Project>